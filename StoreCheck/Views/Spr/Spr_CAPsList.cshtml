@using MvcPaging;
@using StoreCheck;
@model IPagedList<StoreCheck.Models.Spr_CAP>
           

@{
    ViewBag.Title = "Справочник: Торговые агенты";
}

<h2>Справочник: Торговые агенты</h2>


<p>
    @Html.ActionLink("Добавить", "Spr_CAPCreate")
</p>
<table>
    <thead>
        <tr>
            <th class="td_btn"></th>
            <th>
                SKUКМУ
            </th>
            <th>
                SKUгруппировка
            </th>
            <th>
                Приоритетность
            </th>
            <th>
                ПриоритетностьСчет
            </th>
            <th>
                КодАссортимент
            </th>
            <th>
                Ассортимент
            </th>
            <th>
                КатегорияТРТ
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData.Model)
        {
            <tr>
                <td class="td_btn">
                @Html.ActionImage("Spr_CAPEdit", new { id = item.ID }, "~/Content/Images/page_edit.png", "Редактировать")
                @Html.ActionImage("Spr_CAPDetails", new { id = item.ID }, "~/Content/Images/page.png", "Просмотреть")
                @Html.ActionImage("Spr_CAPDelete", new { id = item.ID }, "~/Content/Images/page_delete.png", "Удалить", new { onclick = "return confirm('Вы уверены')" })
                </td>   
                <td>
                    @item.SKUКМУ
                </td>
                <td>
                    @item.SKUгруппировка
                </td>
                <td>
                    @item.Приоритетность
                </td>
                <td>
                    @item.ПриоритетностьСчет
                </td>
                <td>
                    @item.КодАссортимент
                </td>
                <td>
                    @item.Ассортимент
                </td>
                <td>
                    @item.КатегорияТРТ
                </td> 
            </tr>
        }

    </tbody>
</table>
<div class="pager">
    @Html.Pager(ViewData.Model.PageSize, ViewData.Model.PageNumber, ViewData.Model.TotalItemCount)
</div>
<div>
    @Html.ActionLink("Назад", "Spr")
</div>




