@using StoreCheck.Models;
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />  
    <link href="@Url.Content("~/Content/rzTable.css")" rel="stylesheet" type="text/css" /> 
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ui.spinner.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.meiomask.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/colResizable-1.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ui.spinner.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app.js")" type="text/javascript"></script>

</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

            <div id="menucontainer">

                <ul id="menu">
               @if (((int)ViewData["PageRights"] & (int)EnAccessRights.enAccessPageAdm) > 0)
                   { <li>@Html.ActionLink("Администрирование", "Admin", "Admin")</li>}                   
               @if (((int)ViewData["PageRights"] & (int)EnAccessRights.enAccessPageSpr) > 0)
                   { <li>@Html.ActionLink("Справочники", "Spr", "Spr")</li>}
               @if (((int)ViewData["PageRights"] & (int)EnAccessRights.enAccessPageTA) > 0)
                   { <li>@Html.ActionLink("Торговые агенты", "Spr_SRList", "Spr")</li>}     
               @if (((int)ViewData["PageRights"] & (int)EnAccessRights.enAccessPageStrChk) > 0)
                   { <li>@Html.ActionLink("Торговые точки", "EditStore", "Store")</li>}
               @if (((int)ViewData["PageRights"] & (int)EnAccessRights.enAccessPageRep) > 0)
                   { <li>@Html.ActionLink("Отчеты", "Reports", "Rep")</li>}
                </ul>

            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>

   
</body>
</html>
