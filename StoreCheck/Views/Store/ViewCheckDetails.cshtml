@using MvcPaging;
@using StoreCheck;
@model IPagedList<StoreCheck.Models.VWCheckOutletData>           

@{
    ViewBag.Title = "ViewCheckDetails";
}

<h2></h2>

<p>
</p>
<table>
 <tr>
 @foreach (StoreCheck.Models.CheckOutletImg itm in ViewBag.ImgList)
 {
  <td>
  @{ var imgPath = UrlHelper.GenerateContentUrl( itm.Path, this.ViewContext.HttpContext); } <img src="@Url.Content(imgPath)" alt="[IMAGE]" />  
  </td>
 }
 </tr>
</table>

<table>
    <tr>
        <th>
            SKUКМУ
        </th>
    </tr>
@{int i = 1;}
@foreach (var item in Model) 
{
    <tr id="@item.ID" class="@(i++ % 2 == 0 ? "highlighted" : "")">
        <td>
            @Html.DisplayFor(modelItem => item.SKUКМУ)
        </td>
    </tr>
}

</table>
<div class="pager">
    @Html.Pager(ViewData.Model.PageSize, ViewData.Model.PageNumber, ViewData.Model.TotalItemCount)
</div>
<div>
    @Html.ActionLink("Назад", "EditStore")
</div>
