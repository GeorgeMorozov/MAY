@model IEnumerable<StoreCheck.Models.Spr_SR>

@{
    ViewBag.Title = "Справочник: Ассортимент по категориям ТРТ";
}

<h2>Справочник: Ассортимент по категориям ТРТ</h2>

<p>
    @Html.ActionLink("Добавить", "Spr_SRCreate")
</p>
<table>
    <tr>
        <th>
            SBU
        </th>
        <th>
            Регион
        </th>
        <th>
            Область
        </th>
        <th>
            Дистрибутор
        </th>
        <th>
            КодСупервайзер
        </th>
        <th>
            Супервайзер
        </th>
        <th>
            КодТА
        </th>
        <th>
            ТА
        </th>
        <th>
            ТипТА
        </th>
        <th>
            МаршрутТА
        </th>
        <th></th>
    </tr>

@foreach (StoreCheck.Models.Spr_SR item in ViewBag.Spr_SRsItems)
{
    <tr>
        <td>
            @item.SBU
        </td>
        <td>
            @item.Регион
        </td>
        <td>
            @item.Область
        </td>
        <td>
            @item.Дистрибутор
        </td>
        <td>
            @item.КодСупервайзер
        </td>
        <td>
            @item.Супервайзер
        </td>
        <td>
            @item.КодТА
        </td>
        <td>
            @item.ТА
        </td>
        <td>
            @item.ТипТА
        </td>
        <td>
            @item.МаршрутТА
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Spr_SREdit", new { id=item.ID }) |
            @Html.ActionLink("Просмотреть", "Spr_SRDetails", new { id = item.ID }) |
            @Html.ActionLink("Удалить", "Spr_SRDelete", new { id = item.ID }, new { onclick = "return confirm('Вы уверены')" })
        </td> 
    </tr>
}

</table>

